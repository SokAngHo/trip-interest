doctype html
html
  head
    title= 'trip-interest'
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/styles.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    //- Reference:
    //- FontAwesome, "Font Awesome", Fontawesome.com, 2020. [Online].
    //- Available: https://fontawesome.com/start.
    script(src="https://kit.fontawesome.com/265005b203.js" crossorigin="anonymous")
    block head

  body
    header
      block navbar
        nav.navbar.navbar-expand-md.navbar-dark.bg-dark
          a.navbar-brand(href="/") Trip-Interest
          .navbar-nav.nav-pills
            a.nav-item.nav-link(href='/' class=(currentPath === '/' ? 'active' : '')) Home
            a.nav-item.nav-link#fav-link(class=(currentPath.startsWith('/favourites') ? 'active' : '')) Favourites

          .navbar-nav.ml-auto
            .navbar-text.mx-2#username
            a.btn.btn-outline-primary#login-btn(href="/login") Login
            button.btn.btn-outline-primary#logout-btn(onclick="logout()" type="button") Logout


    block content

    script(src='/dist/Auth.bundle.js')
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    block scripts